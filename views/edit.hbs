    <form action="/edit{{#if (isdefined entry.id)}}/{{entry.id}}{{/if}}" method="post">
        <div class="form-group mb-2">
            <label for="title">Title</label>
            <input class="form-control" type="text" id="title" name="title" {{#if (isdefined entry.title)}}value={{entry.title}}{{/if}}  required>
        </div>
        <div class="form-group my-2">
            <label for="importance">Importance</label>
            <input class="form-control" type="text" id="importance" name="importance" {{#if (isdefined entry.importance)}}value={{entry.importance}}{{/if}} required>
        </div>
        <div class="form-group my-2">
            <label for="due_date">Due Date:</label>
            <input class="form-control" type="date" name="due_date" id="due_date" {{#if (isdefined entry.dueDate)}}value={{entry.dueDate}}{{/if}} required>
        </div>
        <div class="form-group my-2">
            <input name="finished" id="finished" type="checkbox" {{#if (isdefined entry.finished)}}{{#if entry.finished}}checked="checked"{{/if}}{{/if}} >
            <label for="finished" class="my-2">Finished</label>
        </div>
        <div class="form-group  my-2">
            <label for="description">Description</label>
            <textarea  class="form-control" id="description" name="description" rows="4">{{#if (isdefined entry.description)}}{{entry.description}}{{/if}}</textarea>
        </div>
        <div class="my-4">
            <button type="submit" name="create_button" class="btn btn-outline-primary">{{#if (isdefined entry.id)}}Update{{else}}Create{{/if}}</button>
            <button type="submit" name="create_ov_button" class="btn btn-outline-primary">{{#if (isdefined entry.id)}}Update & Overview{{else}}Create & Overview{{/if}}</button>
            <button type="submit" name="ov_button" class="btn btn-outline-primary" onclick="this.form.setAttribute('novalidate', 'novalidate');">Overview</button>
        </div>
    </form>
