<div class="d-flex mb-1 justify-content-between">
    <form action='/edit' method='get'>
        <button type="submit" class="btn btn-outline-primary">Create new todo</button>
    </form>
    <form action='/toggle' method='post'>
        <button type="submit" class="btn btn-outline-primary">Toggle Style</button>
    </form>
</div>

<div class="d-flex flex-md-row flex-column">
    <div class="container-fluid">
        <form class="row" action="/sort" method="post">
            <button type="submit" name="title" class="btn btn-outline-primary col-md-auto">Name</button>
            <button type="submit" name="due_date" class="btn btn-outline-primary col-md-auto">By Due Date</button>
            <button type="submit" name="creation_date" class="btn btn-outline-primary col-md-auto">By Creation Date</button>
            <button type="submit" name="importance" class="btn btn-outline-primary col-md-auto">By Importance</button>
        </form>
    </div>
    <form action='/filter' class="ml-auto" method='post'>
        <button type="submit" name="importance" class="btn btn-outline-primary" style="width: 180px;"> Filter completed</button>
    </form>
</div>

{{#each entries}}
    <div class="d-flex">
        <div class="entry-details">
            <label class="due">{{this.daysUntilDueDate}} </label>
            <label class="title">{{this.title}}</label>
            <label class="importance">{{this.importanceSym}}</label>
            <div class="finished">
                <input id="finished" type="checkbox" disabled="disabled" {{#if this.finished}}checked="checked"{{/if}}>
                <label for="finished">{{#if this.finished}}Completed{{else}}Open{{/if}}</label>
            </div>
            <label class="description">{{this.description}}</label>
        </div>
        <div class="entry-edit">
            <form class="edit-button" action='/edit/{{this.id}}' method='get'>
                <button type="submit" name="edit" class="btn btn-outline-primary">Edit</button>
            </form>
        </div>
    </div>
    <hr>
{{/each}}